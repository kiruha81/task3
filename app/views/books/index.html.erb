<%= flash[:notice] %>
<%= render 'template/user', user: @user, book: @book %>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<% @books.each do |book| %>
  <p><%= link_to image_tag(book.user.get_profile_image(50, 50)).to_s, user_path(book.user.id) %></p>
  <p><%= link_to book.title, book_path(book.id) %></p>
  <p><%= book.body %></p>
<% end %>